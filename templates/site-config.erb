%% This file is managed by Puppet
%%
%% Parameters in this file will override those in sitename/config
[
<% if @port -%>
  {hostname, "<%= @hostname %>:<%= @port %>"},
  <% else -%>
  {hostname, "<%= @hostname %>"},
  <% end -%>
  <% if @hostaliases and not @hostaliases.empty? %>
  {hostalias, [
    <% @hostaliases.each_with_index do |hostalias, i| -%>
      "<%= hostalias %>"<%= ',' if i < (@hostaliases.size - 1) %>
    <% end -%>
  ]},
  <% end -%>
  {redirect, <%= @redirect %>},
  {dbdatabase, "<%= @site_db_name %>"},
  {dbschema, "<%= @db_schema %>"},
  {admin_password, "<%= @admin_password %>"},
  {enabled, <%= @enabled %>}
].
